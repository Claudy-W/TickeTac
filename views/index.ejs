    <!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="utf-8">
            <title>WeatherApp</title>
            <!-- To add in order to scale the view for mobiles -->
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
            <link rel="stylesheet" href="/stylesheets/style.css">
            <script src="https://kit.fontawesome.com/e169a8f844.js" crossorigin="anonymous"></script>
          </head>
          <body>
                <!-- HEADER-->
            <%- include('header'); %>
                <!-- HEADER-->

             
         <!-- TITLE-->
              <div class="home">
         
                <div class="row text-light">
         
                  <div class="col-12 text-center get_started mt-5 mb-5">
                    <h2>Venez voyager avec nous !</h2>
                  </div>
         
                <!-- SIGN IN AREA -->
                  <div class="col-12 col-sm-3 offset-sm-3 text-center">
         
                    <div class="formArea">
         
                      <h4 class="titleForm">Sign In :</h4>
         
                      <form action="sign-in" method="POST">
                        <p style="color:red"></p>
                        <div class="form-group">
                          
                          <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                          
                          <input name="password" type="password" class="form-control" placeholder="Enter password">
                        </div>
         
                        <button type="submit" class="btn btn-danger">Submit</button>
                      </form>
         
                    </div>
         
                  </div>

                  <!-- SIGN UP AREA -->
                  <div class="col-12 col-sm-3 offset-sm-1 text-center mt-2">
         
                    <div class="formArea">
                      <h4 class="titleForm">Sign Up :</h4>
         
                      <form action="sign-up" method="POST">
                        <div class="form-group">
                          <input name='username' type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input name='username' type="text" class="form-control" placeholder="Firstame">
                          </div>
                        <div class="form-group">
                          <input name='email' type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                        </div>
                        <div class="form-group">
                          <input name='password' type="password" class="form-control"  placeholder="Password">
                        </div>
         
                        <button type="submit" class="btn btn-danger">Submit</button>
                      </form>
                    </div>
         
                  </div>
         
         
                </div>
              </div>
         
         
         
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
          </body>
        
    </html>